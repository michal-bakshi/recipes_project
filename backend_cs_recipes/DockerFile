# Stage 1: Build stage - Use .NET SDK to build the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy all project files (.csproj files) first for better layer caching
COPY ["Webapi/Webapi.csproj", "Webapi/"]
COPY ["core/Core.csproj", "core/"]
COPY ["Data/Data.csproj", "Data/"]
COPY ["service/Service.csproj", "service/"]

# Restore NuGet packages for all projects
RUN dotnet restore "Webapi/Webapi.csproj"

# Copy the rest of the source code
COPY . .

# Build the application
WORKDIR "/src/Webapi"
RUN dotnet build "Webapi.csproj" -c Release -o /app/build

# Stage 2: Publish stage - Create the production build
FROM build AS publish
RUN dotnet publish "Webapi.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Stage 3: Runtime stage - Use .NET runtime to run the application
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app

# Copy published files from publish stage
COPY --from=publish /app/publish .

# Expose the ports (HTTP and HTTPS)
EXPOSE 5244
EXPOSE 7076

# Set the entry point to run the application
ENTRYPOINT ["dotnet", "Webapi.dll"]
