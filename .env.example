# Database Configuration
# Change these values to match your environment
DB_HOST=db
DB_PORT=1433
DB_NAME=Recipes
DB_USER=sa
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Database Connection String (for local development)
# This connection string is used when running locally (not in Docker)
# Format for Windows Auth: Server=SERVER_NAME\INSTANCE_NAME;Database=DATABASE_NAME;Integrated Security=True;Encrypt=True;TrustServerCertificate=True
# Format for SQL Auth: Server=SERVER_NAME;Database=DATABASE_NAME;User Id=USERNAME;Password=PASSWORD;TrustServerCertificate=True
# For Docker, the connection string is automatically built from DB_HOST, DB_NAME, DB_USER, DB_PASSWORD above
CONNECTION_STRING_MYDB=Server=YOUR_SERVER\SQLEXPRESS;Database=Recipes;Integrated Security=True;Encrypt=True;TrustServerCertificate=True

# Backend API Configuration
API_PORT_HTTP=5244
API_PORT_HTTPS=7076
ASPNETCORE_ENVIRONMENT=Production

# Frontend Configuration
FRONTEND_PORT=80

# SQL Server Configuration
# IMPORTANT: Change this password before deploying!
MSSQL_SA_PASSWORD=CHANGE_THIS_PASSWORD
MSSQL_PID=Express
